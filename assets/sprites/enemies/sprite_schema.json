      "color_palette": "red",
      "animations": {
        "idle": {
          "frames": [0],
          "frame_duration_ms": 0,
          "loop": false
        },
        "walk": {
          "frames": [1, 2],
          "frame_duration_ms": 150,
          "loop": true
        },
